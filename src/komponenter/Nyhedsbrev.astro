---
import "../pages/layouts/Mainlayout.astro";

import Mainlayout from "../pages/layouts/Mainlayout.astro";
---

<head>
  <body>
    <div class="container">
      <h2>NYHEDSBREV</h2>
      <br />
      <h3>“Udfyld formularen og modtag de seneste nyheder fra KidsAid”</h3>
      <form>
        <input type="email" placeholder="E-mail*" required />
        <input type="submit" placeholder="Fornavn*" required />
        <input type="submit" placeholder="Efternavn*" required />
        <button type="submit">Tilmeld</button>
      </form>

      <img src="/public/img/gron_hund.png" alt="Gronhund" class="gronhund" />
      <img src="/public/img/pink_hund.png" alt="pinkhund" class="pinkhund" />
    </div>
  </body>
</head>

<style>
  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    border: 2px solid #000000;
    padding: 20px;
    border-radius: 10px;
    background-color: #f9f9f9;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  input[type="email"],
  input[type="text"] {
    width: 80%;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #cccccc;
    border-radius: 5px;
  }

  button {
    width: 80%;
    padding: 10px;
    font-size: 16px;
    font-weight: bold;
    color: #ffffff; /* Hvid tekst */
    background-color: #000000; /* Sort baggrund */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #444444; /* Mørkere sort ved hover */
  }

  .gron-hund,
  .pink-hund {
    position: absolute;
  }

  .gron-hund {
    top: -50px;
    left: -70px;
    width: 100px;
  }

  .pink-hund {
    top: -50px;
    right: -70px;
    width: 100px;
  }
</style>
