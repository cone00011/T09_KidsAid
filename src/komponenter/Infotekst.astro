<section class="infotekst">
    <div class="balloner">
        <img class="gron_hund" src="../../public/elementer/gron_hund.png" alt="gron_hund">
    </div>

    <div class="info_tekst">
        <h2>“Vi skaber en <br>
        fortryllende hverdag”</h2>

        <p>KidsAids tryllekunstnere besøger hospitaler for at skabe glæde og magiske øjeblikke for børn, der har det svært. Gennem sjove tricks og fortryllende shows bringer de smil og håb til børnene, hvilket giver dem et tiltrængt pusterum fra sygdom og behandling. <br><br>
            Tryllekunstnerne hjælper med at skabe et legende frirum, hvor børnene kan føle sig set, og magien bliver en måde at styrke deres mod og livsglæde.</p>
    </div>

    <div class="balloner">
        <img class="pink_hund" src="../../public/elementer/pink_hund.png" alt="pink_hund">
    </div>
</section>

<style>
.infotekst {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    gap: 20px;
}

/* Teksten */
h2 {
    text-align: center; 
    max-width: 60ch; 
    font-size: 50px;
    padding-bottom: 50px;
}
p {
    text-align: left; 
    max-width: 60ch; 
    font-size: 18px;
}

/* Balloner */
.balloner img {
    height: 150px; 
    transition: height 0.3s ease; /* Tilføjer en glidende effekt */
}

.gron_hund {
    transform: scaleX(-1); 
    margin-top: -300px;
}

.pink_hund {
    left: 100px;
    margin-top: 370px;
}
</style>


<script>
  // Startstørrelse og maks-størrelse
const minHeight = 150;
const maxHeight = 280; // Du kan justere denne, hvis de skal blive større
let currentHeight = minHeight; // Holder styr på den nuværende størrelse

// Funktion til at opdatere balloner ved scroll
function growBalloons() {
    const balloonImages = document.querySelectorAll(".balloner img");

    // Øg højden ved scroll, men begræns til maxHeight
    if (currentHeight < maxHeight) {
        currentHeight += 1.5; // Juster, hvor meget de skal vokse pr. scroll
        balloonImages.forEach(img => {
            img.style.height = `${currentHeight}px`;
        });
    }
}

// Sørg for kun at aktivere væksten, når sektionen er synlig
const infotekstSection = document.querySelector(".infotekst");
const observer = new IntersectionObserver(
    (entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                // Aktivér scroll-begivenhed kun når sektionen er synlig
                window.addEventListener("scroll", growBalloons);
            } else {
                // Stop væksten, når sektionen ikke længere er synlig
                window.removeEventListener("scroll", growBalloons);
            }
        });
    },
    { threshold: 0.1 } // Sektionen betragtes som synlig, når 10% er på skærmen
);

// Overvåg sektionen
observer.observe(infotekstSection);

</script>